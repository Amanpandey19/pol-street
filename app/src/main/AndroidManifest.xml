<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PolStreet"
        tools:targetApi="31">
        <activity
            android:name=".home.BetPaymentActivity"
            android:exported="true"
            android:theme="@style/FragmentTheme.PolStreet">

        </activity>
        <activity
            android:name=".home.BetInformationActivity"
            android:exported="true"
            android:theme="@style/FragmentTheme.PolStreet">
        </activity>
        <activity
            android:name=".home.PhoneNumberVerificationActivity"
            android:exported="false"
            android:theme="@style/FragmentTheme.PolStreet" />
        <activity
            android:name=".home.PaymentActivity"
            android:exported="false"
            android:theme="@style/FragmentTheme.PolStreet" />
        <activity
            android:name=".home.AddMoneyActivity"
            android:exported="false"
            android:theme="@style/FragmentTheme.PolStreet" />
        <activity
            android:name=".home.ProfileActivity"
            android:exported="false"
            android:theme="@style/FragmentTheme.PolStreet" />
        <activity
            android:name=".home.AccountActivity"
            android:exported="false"
            android:theme="@style/FragmentTheme.PolStreet" />
        <activity
            android:name=".home.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme.PolStreet" />
